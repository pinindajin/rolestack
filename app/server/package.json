{
  "name": "roletome-server",
  "version": "0.0.0",
  "description": "description",
  "author": "pinindajin",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "lint": "tslint src/**/*.ts",
    "build": "npm run lint && npm install && npm run webpack"
  },
  "dependencies": {
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "@nestjs/typeorm": "^5.3.0",
    "class-transformer": "^0.1.10",
    "class-validator": "^0.8.5",
    "dotenv": "^6.2.0",
    "fastify-formbody": "^2.1.0",
    "mysql": "^2.17.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "typeorm": "^0.2.17",
    "typescript": "^2.6.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.7.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.1",
    "@types/jest": "^21.1.10",
    "@types/jest-each": "^0.3.4",
    "@types/node": "^9.6.48",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "jest": "^24.8.0",
    "jest-each": "^23.6.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^4.5.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.3.2",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleNameMapper": {
      "@api/(.*)": "<rootDir>/api/$1",
      "@common/(.*)": "<rootDir>/common/$1",
      "@config/(.*)": "<rootDir>/config/$1",
      "@db/(.*)": "<rootDir>/db/$1",
      "@logging/(.*)": "<rootDir>/logging/$1",
      "@game/(.*)": "<rootDir>/api/game/$1",
      "@roll/(.*)": "<rootDir>/api/roll/$1",
      "@stat/(.*)": "<rootDir>/api/stat/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
